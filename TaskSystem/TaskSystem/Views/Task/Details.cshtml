@model IEnumerable<TaskSystem.Models.UserTask>

@{
    ViewBag.Title = "Details";
}

<h2>Details for @ViewBag.UserName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
             @Html.ActionLink("Due date", "Details", new{sortColumn = "date"})           
        </th>
        <th>
            @Html.ActionLink("Priority", "Details", new{sortColumn = "priority"})   
        </th>
        <th>
            @Html.ActionLink("Description", "Details", new{sortColumn = "description"})  
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>       
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.TaskPriority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
