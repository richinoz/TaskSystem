@model TaskSystem.Models.UserTask

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@Html.ValidationSummary(true, "An error occured!")

<h3>Are you sure you want to delete this?</h3>

<fieldset>
    <legend>UserTask</legend>

   
    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-label">TaskPriority</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TaskPriority)
    </div>

    <div class="display-label">DueDate</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DueDate)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Details")
    </p>
}
